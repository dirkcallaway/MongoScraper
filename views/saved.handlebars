<div class="jumbotron">
  <h1 class="display-4">NPR Scraper</h1>
  <p class="lead">Scrape articles from The Coloradoan.</p>
  <hr class="my-4">
  <p>Press to Scrape articles.</p>
  <a class="btn btn-primary btn-lg" id="scrape" href="/scrape">Scrape Now!</a>
</div>

<div class="container">
  <div class=row>
    <div class="col-12">
      {{#if isCompleted}}
      {{#each article}}
      <div class="card">
        <div class="card-header text-white bg-primary">
          <a href={{link}} target="_blank" class="text-white">
            <h2>{{title}}</h2>
          </a>
        </div>
        <div class="card-body">
          <button data="{{_id}}" class="btn btn-info note-btn">Article Notes</button>
          <button data="{{_id}}" class="btn btn-danger delete-saved">Remove From Saved</button>
        </div>
      </div>
      {{/each}}
      {{else}}
      <div class="card">
        <div class="card-header text-white bg-primary">
            <h2>You have no favorite articles.</h2>
        </div>
        <div class="card-body">
          <p>Try adding some articles to your favorites first.</p>
          <a href="/" class="btn btn-primary">Home</a>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>

<div class="modal" id="note-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Article Notes</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="card">
          <ul class="list-group saved-articles">
          </ul>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>